{
  "name": "podpora-bot",
  "version": "1.0.0",
  "description": "Support bot v2",
  "author": "Marek L",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keram/podpora-bot"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint --silent",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "test-full": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc --incremental",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@slack/events-api": "^2.3.3",
    "@slack/interactive-messages": "^1.6.0",
    "@slack/web-api": "^5.10.0",
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "jira.js": "^1.5.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@slack/types": "^1.7.0",
    "@types/async": "^3.2.3",
    "@types/chai": "^4.2.11",
    "@types/concurrently": "^5.2.1",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/request-promise": "^4.1.46",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
