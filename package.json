{
  "name": "podpora-bot",
  "version": "1.0.0",
  "description": "Support bot v2",
  "author": "Marek L",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keram/podpora-bot"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint --silent && cp -r src/views/ dist/",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "test-full": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "build-ts-incremental": "tsc --incremental",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint-full": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "debug": "npm run build-ts-incremental && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@sindresorhus/slugify": "^1.1.0",
    "@slack/events-api": "^2.3.4",
    "@slack/interactive-messages": "^1.7.0",
    "@slack/web-api": "^5.14.0",
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "jira.js": "^1.7.3",
    "redis": "^3.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@slack/types": "^1.10.0",
    "@types/async": "^3.2.5",
    "@types/chai": "^4.2.14",
    "@types/concurrently": "^5.2.1",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/redis": "^2.8.28",
    "@types/request-promise": "^4.1.47",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "nodemon": "^2.0.6",
    "shelljs": "^0.8.4",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
